            "element_sections": [
              {
                "algorithm_section": {
                  "statement": [
                    {
                      "assignment_statement": {
                        "identifier": [
                          {
                            "dot_op": false,
                            "identifier": "y"
                          }
                        ],
                        "value": {
                          "simple_expression": {
                            "function_call": {
                              "name": "smooth",
                              "arguments": [
                                {
                                  "name": "1"
                                },
                                {
                                  "name": "if [object Object] then y1 else if [object Object] then y2 else if [object Object] then (x/x_small)*((x/x_small)^2 -3)*(y2 -y1)/4 +(y1 +y2)/2 else (y1 +y2)/2"
                                }
                              ]
                            }
                          }
                        }
                      }
                    }
                  ]
