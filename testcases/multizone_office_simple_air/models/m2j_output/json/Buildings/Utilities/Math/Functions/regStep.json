                  "component_list": [
                    {
                      "declaration": {
                        "identifier": "y2"
                      },
                      "description": {
                        "description_string": "Ordinate value for x < 0"
                      }
                    }
                  ]
                }
              },
              {
                "component_clause": {
                  "type_prefix": "input",
                  "type_specifier": "Real",
                  "component_list": [
                    {
                      "declaration": {
                        "identifier": "x_small",
                        "modification": {
                          "class_modification": [
                            {
                              "element_modification_or_replaceable": {
